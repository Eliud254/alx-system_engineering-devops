#!/usr/bin/env bash
# Displays time for 12 horus and 59 minutes.
#   Displays hours starting from 0 to 12
#   Displays minutes starting from 1 to 59

hour=0

while [ $hour -le 12 ]
do
  echo "Hour: $hour"
  minute=1
  while [ $minute -le 59 ]
  do
    echo "$minute"
    (( minute++ ))
  done
  (( hour++ ))
done
